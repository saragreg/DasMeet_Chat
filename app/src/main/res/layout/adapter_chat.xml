<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/otroLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/otroMessage"
                android:padding="20dp"
                android:background="@drawable/otro_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:text="opponent message"/>
            <TextView
                android:id="@+id/otrofechora"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-08-2023 14:02"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/miLayout"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="100dp">
            <TextView
                android:id="@+id/miMessage"
                android:padding="20dp"
                android:background="@drawable/mi_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                android:text="my message"/>
            <TextView
                android:id="@+id/mifechora"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-08-2023 14:02"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>